BREW_PATH=/opt/homebrew

# Vim THE editor!
export VISUAL=vim
export EDITOR=vim

# For Android
if [ -d "$BREW_PATH"/gcopt/android-sdk ]; then
  export ANDROID_HOME="$BREW_PATH"/gcopt/android-sdk
fi

# For Python (virtualenv and pip
export PYTHONDONTWRITEBYTECODE=1
export PIP_REQUIRE_VIRTUALENV=true
export PIP_RESPECT_VIRTUALENV=true
export PIP_DOWNLOAD_CACHE="$HOME"/.pip_download_cache

if [ -d "$BREW_PATH"/opt/openssl ]; then
  # https://github.com/pycurl/pycurl/issues/526
  export PYCURL_SSL_LIBRARY=openssl
  export LDFLAGS=-L"$BREW_PATH"/opt/openssl/lib
  export CPPFLAGS=-I"$BREW_PATH"/opt/openssl/include
fi

# For Go
export GOPATH="$HOME"/.go
if [ -d "$GOPATH" ]; then
  export PATH="$GOPATH"/bin:"$PATH"
fi

# For Ruby
if [ -d "$BREW_PATH"/gcopt/ruby/bin ]; then
  export PATH="$BREW_PATH"/gcopt/ruby/bin:"$PATH"
fi
if [ -d "$BREW_PATH"/gcvar/rbenv ]; then
  export RBENV_ROOT="$BREW_PATH"/gcvar/rbenv
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init - --no-rehash)"
fi

# For Node.js
if [ -s "$HOME"/.nodebrew ]; then
  export PATH="$HOME"/.nodebrew/current/bin:"$PATH"
fi
if [ -d "$BREW_PATH"/gclib/node ]; then
  export NODE_PATH="$BREW_PATH"/gclib/node
fi
if [ -d "$BREW_PATH"/gcshare/npm/bin ]; then
  export PATH="$BREW_PATH"/gcshare/npm/bin:"$PATH"
fi
export PATH=./node_modules/.bin:"$PATH"

# For MacTex
if [ -d /usr/texbin ]; then
  export PATH=/usr/texbin:"$PATH"
fi
if [ -d "$BREW_PATH"/opt/gettext/bin ]; then
  export PATH="$BREW_PATH"/opt/gettext/bin:"$PATH"
fi
# added by travis gem
if [ -f ~/.travis/travis.sh ]; then
  source ~/.travis/travis.sh
fi

export GPG_TTY="$(tty)"
