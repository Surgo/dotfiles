# Vim THE editor!
export VISUAL=vim
export EDITOR=vim

# For Python (virtualenv and pip
export PYTHONDONTWRITEBYTECODE=1
export PIP_REQUIRE_VIRTUALENV=true
export PIP_RESPECT_VIRTUALENV=true

if [ -d "${BREW_PREFIX}/opt/openssl/bin" ]; then
  # https://github.com/pycurl/pycurl/issues/526
  export PYCURL_SSL_LIBRARY=openssl
  # https://gist.github.com/andrisasuke/91eccace11366e626d14c5c249054e20
  export SWIG_FEATURES="-cpperraswarn -includeall -I${BREW_PREFIX}/opt/openssl/include"
fi

export GPG_TTY="$(tty)"
