# Vim THE editor!
export VISUAL=vim
export EDITOR=vim

# For Python (virtualenv and pip
export PYTHONDONTWRITEBYTECODE=1
export PIP_REQUIRE_VIRTUALENV=true
export PIP_RESPECT_VIRTUALENV=true
if [ -d "/usr/local/opt/openssl/bin" ]; then
  # https://github.com/pycurl/pycurl/issues/526
  export PYCURL_SSL_LIBRARY=openssl
  # https://gist.github.com/andrisasuke/91eccace11366e626d14c5c249054e20
  export SWIG_FEATURES="-cpperraswarn -includeall -I/usr/local/opt/openssl/include"
fi

# For Go
export GOPATH="$HOME/.go"

# For Travis-CI
if [ -f ~/.travis/travis.sh ]; then
  source ~/.travis/travis.sh
fi

export GPG_TTY="$(tty)"
