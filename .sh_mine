# Add my scripts
PATH=~/bin:$PATH

# For .brewfile
export HOMEBREW_BREWFILE=~/.brewfile

# Vim THE editor!
export VISUAL=vim
export EDITOR=vim

# For Android
if [ -d /opt/homebrew/gcopt/android-sdk ]; then
  export ANDROID_HOME=/opt/homebrew/gcopt/android-sdk
fi

# For Python (virtualenv and pip)
export PYTHONDONTWRITEBYTECODE=1

export PIP_REQUIRE_VIRTUALENV=true
export PIP_RESPECT_VIRTUALENV=true
export PIP_DOWNLOAD_CACHE=$HOME/.pip_download_cache

export WORKON_HOME=$HOME/.virtualenvs
export VIRTUALENVWRAPPER_SCRIPT=`which virtualenvwrapper.sh`
source $VIRTUALENVWRAPPER_SCRIPT

# For Go
# if [ -d /opt/homebrew/gcCellar/go ]; then
  # export GOROOT=/opt/homebrew/gcCellar/go/1.2.1
  # export PATH=$PATH:$GOROOT/libexec/bin
# fi
if [ -d $HOME/go ]; then
  export GOPATH=$HOME/go
  export PATH=$PATH:$GOPATH/bin
fi

# For Ruby
if [ -d /opt/homebrew/gcopt/ruby/bin ]; then
  export PATH=/opt/homebrew/gcopt/ruby/bin:$PATH
fi
if [ -d /opt/homebrew/gcvar/rbenv ]; then
  export RBENV_ROOT=/opt/homebrew/gcvar/rbenv
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init - --no-rehash)"
fi

# For Node.js
if [ -s ${HOME}/.nodebrew ]; then
  export PATH="$HOME/.nodebrew/current/bin:$PATH"
fi
if [ -d /opt/homebrew/gclib/node ]; then
  export NODE_PATH="/opt/homebrew/gclib/node"
fi
if [ -d /opt/homebrew/gcshare/npm/bin ]; then
  export PATH="/opt/homebrew/gcshare/npm/bin:$PATH"
fi
export PATH="./node_modules/.bin:$PATH"

# For MacTex
if [ -d /usr/texbin ]; then
  export PATH="/usr/texbin:$PATH"
fi
if [ -d /opt/homebrew/opt/gettext/bin ]; then
  export PATH="/opt/homebrew/opt/gettext/bin:$PATH"
fi
# added by travis gem
if [ -f ~/.travis/travis.sh ]; then
  source ~/.travis/travis.sh
fi
